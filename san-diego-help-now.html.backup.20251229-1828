  <script>

    function updateDateTime() {

      const now = new Date();

      const options = {

        timeZone: "America/Los_Angeles",

        weekday: "short",

        month: "short",

        day: "numeric",

        hour: "numeric",

        minute: "2-digit",

        hour12: true

      };

      document.getElementById("datetime").textContent =

        now.toLocaleString("en-US", options);

    }

    updateDateTime();

    setInterval(updateDateTime, 60000);

  </script>



